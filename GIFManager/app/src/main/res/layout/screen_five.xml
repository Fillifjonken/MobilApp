<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/gif_logo_2"/>

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/background_light"
        android:text="@string/reportResult"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@color/colorPrimaryDark"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="107dp"
        android:layout_height="106dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="137dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="261dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/background_light"
        android:gravity="center_horizontal|fill_horizontal">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/scanResult"
                android:layout_width="176dp"
                android:layout_height="match_parent"
                android:text="@string/scan_results"
                android:background="@drawable/button_back"/>

            <Button
                android:id="@+id/scanFairplay"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:text="@string/scan_fairplay"
                android:background="@drawable/button_back"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/resultView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:padding="10px"
                android:scaleType="centerInside"
                app:srcCompat="@android:drawable/ic_menu_camera" />

            <ImageView
                android:id="@+id/fairplayView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:padding="10px"
                android:scaleType="centerInside"
                app:srcCompat="@android:drawable/ic_menu_camera" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/generate"
                android:layout_width="176dp"
                android:layout_height="58dp"
                android:text="@string/generate_report"
                android:background="@drawable/button_back"/>

            <Button
                android:id="@+id/finalize"
                android:layout_width="176dp"
                android:layout_height="58dp"
                android:text="@string/send_report"
                android:background="@drawable/button_back"/>
        </TableRow>

    </TableLayout>


</RelativeLayout>